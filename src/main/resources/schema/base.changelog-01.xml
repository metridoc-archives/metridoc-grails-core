<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="pkeavney" id="base-01" dbms="mysql,h2">
        <comment>general tables used in metridoc</comment>

        <createTable tableName="data_file">
            <column autoIncrement="true" name="data_file_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="data_file_name" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="ip_address">
            <column autoIncrement="true" name="ip_address_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="ip_address" type="VARCHAR(16)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="resource">
            <column autoIncrement="true" name="resource_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="resource" type="VARCHAR(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="mini_resource" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="journal_catalog">
            <column autoIncrement="true" name="journal_catalog_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="location">
            <column autoIncrement="true" name="location_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="city" type="VARCHAR(32)"/>
            <column name="state" type="VARCHAR(32)"/>
            <column name="country" type="VARCHAR(32)"/>
        </createTable>
        <createIndex indexName="uk_location" tableName="location" unique="true">
            <column name="city"/>
            <column name="state"/>
            <column name="country"/>
        </createIndex>

        <createTable tableName="patron">
            <column name="id" type="VARCHAR(8)"/>
            <column name="org" type="VARCHAR(5)"/>
            <column name="rank" type="VARCHAR(32)"/>
        </createTable>
        <createIndex indexName="idx_patron_id" tableName="patron" unique="false">
            <column name="id"/>
        </createIndex>
        <createIndex indexName="idx_patron_org" tableName="patron" unique="false">
            <column name="org"/>
        </createIndex>
        <createIndex indexName="idx_patron_rank" tableName="patron" unique="false">
            <column name="rank"/>
        </createIndex>

        <createTable tableName="rank">
            <column autoIncrement="true" name="rank_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rank_code" type="VARCHAR(8)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="rank_desc" type="VARCHAR(64)"/>
            <column name="weight" type="INT" defaultValueNumeric="4"/>
        </createTable>

        <createTable tableName="organization">
            <column autoIncrement="true" name="org_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="org_code" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(120)"/>
            <column name="org_category" type="VARCHAR(32)"/>
            <column name="org_short_name" type="VARCHAR(64)"/>
            <column name="center_code" type="CHAR(2)"/>
            <column name="center_name" type="VARCHAR(120)"/>
        </createTable>

        <createTable tableName="agent">
            <column autoIncrement="true" name="agent_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="agent" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="mini_agent" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="cookies">
            <column autoIncrement="true" name="cookies_id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="cookies" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="mini_cookies" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="base-02" author="tommy barker" dbms="h2,mysql">
        <comment>creates a validation error table for parsing errors</comment>
        <createTable tableName="validation_error">
            <column name="error_id" autoIncrement="true" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="file_name" type="varchar(50)"/>
            <column name="group_name" type="varchar(50)"/>
            <column name="message" type="text"/>
            <column name="stack_trace" type="text"/>
            <column name="line" type="int"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
