<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="shiro-01" author="Tommy Barker" dbms="h2,mysql">
        <createTable tableName="shiro_role">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="name" type="varchar(255)">
                <constraints unique="true"/>
            </column>
        </createTable>
        <createTable tableName="shiro_user">
            <column name="version" type="bigint"/>
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(255)"/>
        </createTable>
        <createTable tableName="shiro_role_permissions">
            <column name="shiro_role_id" type="bigint"/>
            <column name="permissions_string" type="varchar(255)"/>
        </createTable>
        <createTable tableName="shiro_user_permissions">
            <column name="shiro_user_id" type="bigint"/>
            <column name="permissions_string" type="varchar(255)"/>
        </createTable>
        <createTable tableName="shiro_user_roles">
            <column name="shiro_user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="shiro_role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="shiro_role_permissions" baseColumnNames="shiro_role_id"
                                 constraintName="fk_shiro_role_permissions_shiro_role"
                                 referencedTableName="shiro_role"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="shiro_user_permissions" baseColumnNames="shiro_user_id"
                                 constraintName="fk_shiro_user_permissions_shiro_user"
                                 referencedTableName="shiro_user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="shiro_user_roles" baseColumnNames="shiro_role_id"
                                 constraintName="fk_shiro_user_role_shiro_role"
                                 referencedTableName="shiro_role"
                                 referencedColumnNames="id"/>

        <addPrimaryKey tableName="shiro_user_roles" columnNames="shiro_user_id,shiro_role_id"/>
    </changeSet>

    <changeSet id="shiro-02" author="Tommy Barker">
        <addUniqueConstraint tableName="shiro_user" columnNames="username"/>
    </changeSet>

    <changeSet id="shiro-03" author="Tommy Barker" dbms="mysql,h2">
        <addColumn tableName="shiro_user">
            <column name="loading_type" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="shiro-04" author="Tommy Barker" dbms="mysql,h2">
        <addColumn tableName="shiro_user">
            <column name="vetted" type="smallint"/>
            <column name="email_address" type="varchar(50)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>