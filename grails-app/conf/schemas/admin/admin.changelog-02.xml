<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    
    <changeSet id="admin-07" author="Tommy Barker" dbms="mysql,h2">
        <createTable tableName="loaded_files">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="INT"/>
            <column name="loaded" type="SMALLINT"/>
            <column name="sha256" type="VARCHAR(256)"/>
            <column name="document_content" type="blob"/>
            <column name="file_type" type="varchar(50)"/>
            <column name="file_group" type="varchar(256)"/>
            <column name="file_name" type="varchar(256)"/>
            <column name="document_date" type="date"/>
            <column name="loading_date" type="datetime"/>
        </createTable>
    </changeSet>
    
</databaseChangeLog>