<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="admin-01" author="Tommy Barker">
        <comment>
            creates tables that maintain admin information, like application properties, things like that
        </comment>
        <createTable tableName="application_properties">
            <column name="version" type="bigint"/>
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(511)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
    <changeSet id="admin-02" author="Tommy Barker" dbms="mysql,h2">
        <createTable tableName="reports_configuration">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="admin" type="tinyint"/>
            <column name="anonymous" type="tinyint"/>
            <column name="version" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="admin-03" author="Tommy Barker">
        <addColumn tableName="reports_configuration">
            <column name="display_name" type="varchar(500)"/>
        </addColumn>
        <sql>update reports_configuration set display_name=name</sql>
        <addNotNullConstraint tableName="reports_configuration" columnName="display_name"
                              columnDataType="varchar(500)"/>
    </changeSet>
    <changeSet id="admin-04" author="Tommy Barker">
        <dropColumn tableName="reports_configuration" columnName="admin"/>
        <dropColumn tableName="reports_configuration" columnName="anonymous"/>
        <addColumn tableName="reports_configuration">
            <column name="role" type="varchar(500)"/>
        </addColumn>
    </changeSet>
    <changeSet id="admin-05" author="Tommy Barker">
        <sql>update reports_configuration set role=&apos;ROLE_ADMIN&apos;</sql>
        <addNotNullConstraint tableName="reports_configuration" columnName="role" columnDataType="varchar(500)"/>
    </changeSet>
    <!--<changeSet id="admin-06" author="Tommy Barker">-->
        <!--<comment>no longer need reports_configuration since we are managing reports in Config.groovy instead</comment>-->
        <!--<sql>drop table reports_configuration</sql>-->
    <!--</changeSet>-->
</databaseChangeLog>